{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "declaration": true,
    "declarationDir": "dist",
    "esModuleInterop": true,
    "jsx": "react-jsx",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "moduleResolution": "node",
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "outDir": "dist/esm",
    "sourceMap": true,
    "target": "es6",
    "resolveJsonModule": true
  },
  "include": [
    "**/*.ts",
    "src/**/*.tsx",
    "src/**/*.ts",
    "src/react-modal-alert",
    "rollup.config.mjs",
  ]
}